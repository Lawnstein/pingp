<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<property name="logger.appid" value="pingp" />
	<property name="logger.dir" value="logs" />
	<property name="logger.stdoutloglevel" value="INFO" />
	<property name="logger.rootloglevel" value="INFO" />
	<property name="logger.thirdloglevel" value="ERROR" />
	<contextName>${logger.appid}</contextName>
	
	<logger name="org.springframework" level="WARN" />
	<logger name="com.ping.file.client" level="WARN" />
	
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>${logger.stdoutloglevel}</level>
		</filter>
		<encoder>
			<immediateFlush>true</immediateFlush>
			<pattern>[%date{HH:mm:ss.SSS}][%thread][%-5level] %msg%n</pattern>
		</encoder>
	</appender>
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${logger.dir}/${logger.appid}/pingp.%d{yyyyMMdd}.log</fileNamePattern>
			<maxHistory>30</maxHistory>
			<totalSizeCap>20GB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<immediateFlush>false</immediateFlush>
			<pattern>[%date{HH:mm:ss.SSS}][%-5level][%thread] %msg%n</pattern>
		</encoder>
	</appender>

	<root level="${logger.rootloglevel}">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</root>

</configuration>
